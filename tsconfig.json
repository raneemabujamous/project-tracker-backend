{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": false,
    "noEmitOnError": false,      // allow transpile even with errors
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2021", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "jsx": "react-jsx",

    "paths": {
      "@/*": ["src/*"],
      "@/packages/*": ["src/packages/*"],
      "@/utils/*": ["src/utils/*"]
          
    }
  },
  "exclude": ["node_modules", "tmp"]
}